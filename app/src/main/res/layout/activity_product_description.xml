<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDescriptionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/productIv"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_marketplace_black" />

        <TextView
            android:id="@+id/productTitleTv"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productIv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Product Title"
            android:textColor="@color/black"
            android:textSize="30sp"/>

        <ImageButton
            android:id="@+id/favorite_button"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_below="@id/productIv"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/ic_favourite_black"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/productDescriptionTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/productTitleTv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:lineSpacingExtra="5sp"
            android:justificationMode="inter_word"
            android:text="Description lala hahha oinsw0irn 0qind0inw0ibcvf 0iebn0ciwnef 0isnc0iwncin0 w0uicb0widbc"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/priceTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productDescriptionTv"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text="RM 29.90"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/productDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/priceTv"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="PRODUCT DETAILS"
                android:textColor="#000000"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/categoryTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="CATEGORY - SHIRT"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/sizeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="SIZE - M"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/conditionTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:text="CONDITION - GOOD"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/positiveLy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productDetailsLayout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/border"
            android:padding="10dp">

            <TextView
                android:id="@+id/positiveImpactTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:justificationMode="inter_word"
                android:text="POSITIVE IMPACT OF A SECONDHAND SHIRT"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/impactDetailsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/positiveImpactTv"
                android:layout_marginTop="10sp"
                android:lineSpacingExtra="5dp"
                android:text="By choosing to buy a secondhand shirt instead of new and wearing it 10 times, you can save the equivalent of:"
                android:textColor="#D0000000"
                android:textSize="15dp" />

            <LinearLayout
                android:id="@+id/waterWasteLy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:layout_below="@+id/impactDetailsTv">
                <ImageView
                    android:id="@+id/waterDropIv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/impactDetailsTv"
                    android:src="@drawable/ic_drop_black"/>

                <TextView
                    android:id="@+id/waterWasteTv"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="416.17"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" glasses of drinking water" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lightLy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:layout_below="@+id/waterWasteLy">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/impactDetailsTv"
                    android:src="@drawable/ic_light_black"/>

                <TextView
                    android:id="@+id/lightWasteTv"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="285.79"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" hours of powering an LED light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:layout_below="@+id/lightLy">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/impactDetailsTv"
                    android:src="@drawable/ic_cloud_black"/>

                <TextView
                    android:id="@+id/emissionWasteTv"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.87"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" miles of driving emissions" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/sellerLy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/positiveLy"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp"
            android:padding="10dp"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                android:id="@+id/sellerIv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_default_img"/>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/nameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="Person Name"/>

                <TextView
                    android:id="@+id/emailTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Person Email"/>

                <TextView
                    android:id="@+id/phoneTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Person Phone"/>

            </LinearLayout>

            <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                android:id="@+id/sendWhatsappIv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/whatsapp_icon"
                android:background="@null"/>


        </LinearLayout>


    </RelativeLayout>




</ScrollView>