<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000"/> <!-- Border color -->
            <corners android:radius="5dp"/> <!-- Optional: change the value for rounded corners -->
        </shape>
    </item>
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Background color of the LinearLayout -->
            <corners android:radius="5dp"/> <!-- Optional: change the value for rounded corners -->
        </shape>
    </item>
</layer-list>
